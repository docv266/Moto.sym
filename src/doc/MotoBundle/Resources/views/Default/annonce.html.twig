{% extends "docMotoBundle::layout.html.twig" %}

{% block title %}
  Voir annonce - {{ parent() }}
{% endblock %}

{% block docmoto_body %}

  <h2>
  {{ annonce.titre }}
  </h2>
  
  {% for photo in annonce.photos %}
	  <img
	  src="{{ asset(photo.webPath | apply_filter('my_normal')) }}"
	  alt="{{ photo.alt }}"
	  />
  {% endfor %}
  <br />
  
  <br />
  <br />
  
  <pre>
  {{ annonce.description }}
  </pre>
  
  
  <br />
  
   <a href="{{ path('doc_moto_annonces_compatibles', {'id': annonce.id}) }}" class="btn btn-default">
      Voir les annonces compatibles avec celle-ci
  </a>

  <br />
  <br />
  
  <a href="{{ path('doc_moto_editer', {'id': annonce.id}) }}" class="btn btn-default">
      Modifier l'annonce
  </a>

  <br />
  <br />
  
  <a href="{{ path('doc_moto_supprimer', {'id': annonce.id}) }}" class="btn btn-default">
      Supprimer l'annonce
  </a>
  
 
  
{% endblock %}