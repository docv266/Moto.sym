{% extends "docMotoBundle::layout.html.twig" %}

{% block title %}
  Voir annonce - {{ parent() }}
{% endblock %}

{% block docmoto_body %}

  <h2>
  Voir l'annonce
  
  </h2>

  {{ annonce.titre }}<br />
  {{ annonce.moto.marque.nom }}
  {{ annonce.moto.modele }} <br />
  {% if annonce.photo1 is not null %}
  <img
  src="{{ asset(annonce.photo1.webPath | apply_filter('my_normal')) }}"
  alt="{{ annonce.photo1.alt }}"
  />
  {% endif %}
  <br />
  <br />
  
  <a href="{{ path('doc_moto_supprimer', {'id': annonce.id}) }}" class="btn btn-default">
      Supprimer l'annonce
  </a>

  <br />
  <br />
  
  <a href="{{ path('doc_moto_editer', {'id': annonce.id}) }}" class="btn btn-default">
      Modifier l'annonce
  </a>

  <br />
  <br />
  
  <a href="{{ path('doc_moto_annonces_compatibles', {'id': annonce.id}) }}" class="btn btn-default">
      Voir les annonces compatiblees avec celle-ci
  </a>
  
{% endblock %}