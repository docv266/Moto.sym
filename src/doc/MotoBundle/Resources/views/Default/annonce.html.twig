{% extends "docMotoBundle::layout.html.twig" %}

{% block title %}
  Voir annonce - {{ parent() }}
{% endblock %}

{% block docmoto_body %}

  <h2>
  {{ annonce.titre }}
  </h2>
  
    {% if message %} 
		<div class="alert alert-success" role="alert">
			<button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
			<span class="glyphicon glyphicon-exclamation-sign" aria-hidden="true"></span>
			<span class="sr-only">Succ√®s:</span>
			{{ message }}  
		</div>
  {% endif %}
  
  {% for photo in annonce.photos %}
	  <img
	  src="{{ asset(photo.webPath | apply_filter('my_normal')) }}"
	  alt="{{ photo.alt }}"
	  />
  {% endfor %}
  <br />
  
  <br />
  <br />
  
  <pre>
  {{ annonce.description }}
  </pre>
  
  
  <br />
  
   <a href="{{ path('doc_moto_annonces_compatibles', {'id': annonce.id}) }}" class="btn btn-default">
      Voir les annonces compatibles avec celle-ci
  </a>

  <br />
  <br />
  
  <a href="{{ path('doc_moto_editer', {'id': annonce.id}) }}" class="btn btn-default">
      Modifier l'annonce
  </a>

  <br />
  <br />
  
  <a href="{{ path('doc_moto_supprimer', {'id': annonce.id}) }}" class="btn btn-default">
      Supprimer l'annonce
  </a>
  
 
  
{% endblock %}